---
interface Props {
    href: string,
}

const { href } = Astro.props
---
<a href={href} target="_blank" class="underline decoration-dotted text-blue-300 hover:text-blue-400 transition-colors inline-block ext"><slot>{href}</slot></a>
<style>
    .ext::after {
        content: '';
        display: inline-block;
        width: 1rem;
        height: 1rem;
        text-indent: 1rem;
        white-space: nowrap;
        overflow: hidden;
        background-image: url(/icons/link.svg);
        background-repeat: no-repeat;
        background-position: center;
        background-size: 80% auto;
    }
</style>
